<% if @error_message.blank? %>
	$('#job-routine-list').append("<%=j render(partial: "row_job_routine", locals: {job_routine: @job_routine}) %>");
	$('#new_job_routine_job_template_id').val('');
	$('#new_job_routine_job_template_id').trigger('chosen:updated');
	$('#new_job_routine_expect_qty').val('');
	$('#new_job_routine_name').val('');
	$('#new_job_routine_weight').val('');
	$('#new_job_routine_expect').val('');
	$('#job-routine-row-<%= @job_routine.id %>').effect("highlight", 1000);
	
	$('#xnew_job_routine_expect_1').prop('checked', false);
	$('#xnew_job_routine_expect_2').prop('checked', false);
	$('#xnew_job_routine_expect_3').prop('checked', false);
	$('#xnew_job_routine_expect_4').prop('checked', false);
	$('#xnew_job_routine_expect_5').prop('checked', false);
	
	$('#new_job_routine_name').parent().removeClass('has-error');
	$('#new_job_routine_expect').parent().removeClass('has-error');
	$('#new_job_routine_weight').parent().removeClass('has-error');
<% else %>
	
	if($('#new_job_routine_name').val() == ''){
		$('#new_job_routine_name').parent().addClass('has-error');
	}else{
		$('#new_job_routine_name').parent().removeClass('has-error');
	}
	
	if($('#new_job_routine_expect').val() == ''){
		$('#new_job_routine_expect').parent().addClass('has-error');
	}else{
		$('#new_job_routine_expect').parent().removeClass('has-error');
	}
	
	if($('#new_job_routine_weight').val() == ''){
		$('#new_job_routine_weight').parent().addClass('has-error');
	}else{
		$('#new_job_routine_weight').parent().removeClass('has-error');
	}
	
	alert('<%=h @error_message %>\r\n<%= @job_routine.errors.full_messages.join("\\r\\n") %>');
	
<% end %>


init_input_chosen();