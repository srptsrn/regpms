<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th nowrap><%= PositionCapacityUser.human_attribute_name :position_capacity %></th>
            <th nowrap><%= PositionCapacityUser.human_attribute_name :user %></th>
            <th nowrap><%= PositionCapacityUser.human_attribute_name :evaluation %></th>
            <th nowrap><%= PositionCapacityUser.human_attribute_name :committee %></th>
            <th nowrap><%= PositionCapacityUser.human_attribute_name :role %></th>
            <th nowrap><%= PositionCapacityUser.human_attribute_name :expect %></th>
            <th nowrap><%= PositionCapacityUser.human_attribute_name :weight %></th>
            <th nowrap><%= PositionCapacityUser.human_attribute_name :score %></th>
            <th nowrap><%= PositionCapacityUser.human_attribute_name :score_real_expect %></th>
            <th nowrap><%= PositionCapacityUser.human_attribute_name :score_real_100 %></th>
            <th nowrap><%= PositionCapacityUser.human_attribute_name :score_weight %></th>
            <th nowrap><%= PositionCapacityUser.human_attribute_name :score_real %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;">
                    <%= link_to_add_association f, :position_capacity_users, partial: "/position_capacity_users/nested_fields", class: "btn btn-sm btn-success",
                    "data-association-insertion-node" => "#position_capacity_user_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus'></i>
                    <% end %>
                </th>
            <% end %>
        </tr>
    </thead>
    <tbody id="position_capacity_user_fields">
        <%= f.simple_fields_for :position_capacity_users do |position_capacity_user| %>
            <%= render '/position_capacity_users/nested_fields', :f => position_capacity_user %>
        <% end %>
    </tbody>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#position_capacity_user_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>