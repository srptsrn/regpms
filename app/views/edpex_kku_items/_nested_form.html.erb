<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="no-padding" style="width:85px;"><%= EdpexKkuItem.human_attribute_name :no %></th>
            <th class="no-padding"><%= EdpexKkuItem.human_attribute_name :name %></th>
            <th class="no-padding" style="width:85px;"><%= EdpexKkuItem.human_attribute_name :target %></th>
            <th class="no-padding" style="width:85px;"><%= EdpexKkuItem.human_attribute_name :year1 %></th>
            <th class="no-padding" style="width:85px;"><%= EdpexKkuItem.human_attribute_name :year2 %></th>
            <th class="no-padding" style="width:85px;"><%= EdpexKkuItem.human_attribute_name :year3 %></th>
            <th class="no-padding" style="width:85px;"><%= EdpexKkuItem.human_attribute_name :year4 %></th>
            <th class="no-padding" style="width:85px;"><%= EdpexKkuItem.human_attribute_name :year5 %></th>
            <th class="no-padding" style="width:85px;"><%= EdpexKkuItem.human_attribute_name :year %></th>
            <th class="no-padding" style="width:150px;"><%= EdpexKkuItem.human_attribute_name :institute %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;">
                    <%= link_to_add_association f, :edpex_kku_items, partial: "/edpex_kku_items/nested_fields", class: "btn btn-sm btn-success",
                    "data-association-insertion-node" => "#edpex_kku_item_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus'></i>
                    <% end %>
                </th>
            <% end %>
        </tr>
    </thead>
    <tbody id="edpex_kku_item_fields">
        <%= f.simple_fields_for :edpex_kku_items do |edpex_kku_item| %>
            <%= render '/edpex_kku_items/nested_fields', :f => edpex_kku_item %>
        <% end %>
    </tbody>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#edpex_kku_item_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>