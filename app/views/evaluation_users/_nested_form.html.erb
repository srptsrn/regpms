<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th nowrap><%= EvaluationUser.human_attribute_name :user %></th>
            <th nowrap><%= EvaluationUser.human_attribute_name :evaluation %></th>
            <th nowrap><%= EvaluationUser.human_attribute_name :committee %></th>
            <th nowrap><%= EvaluationUser.human_attribute_name :role %></th>
            <th nowrap><%= EvaluationUser.human_attribute_name :comment1 %></th>
            <th nowrap><%= EvaluationUser.human_attribute_name :comment2 %></th>
            <th nowrap><%= EvaluationUser.human_attribute_name :position_capacity_total %></th>
            <th nowrap><%= EvaluationUser.human_attribute_name :employee_type_task_total %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;">
                    <%= link_to_add_association f, :evaluation_users, partial: "/evaluation_users/nested_fields", class: "btn btn-sm btn-success",
                    "data-association-insertion-node" => "#evaluation_user_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus'></i>
                    <% end %>
                </th>
            <% end %>
        </tr>
    </thead>
    <tbody id="evaluation_user_fields">
        <%= f.simple_fields_for :evaluation_users do |evaluation_user| %>
            <%= render '/evaluation_users/nested_fields', :f => evaluation_user %>
        <% end %>
    </tbody>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#evaluation_user_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>