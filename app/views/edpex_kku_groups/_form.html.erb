<% @form_defaults = {input_html: {autocomplete: :off}} %>
<% @form_defaults[:disabled] = (action_name == "show") || (@edpex_kku_group.respond_to?(:current_state) && @edpex_kku_group.current_state.meta[:disabled]) %>
<div data-widget-editbutton="false" id="power-forms-grid" class="powerwidget cold-grey" role="widget">
	<div class="inner-spacer" role="content">

		<%= simple_form_for(@edpex_kku_group, html: {class: 'form-horizontal'}, defaults: @form_defaults) do |f| %>
	    	<% params[:q].each do |k,v| %>
		        <%= hidden_field_tag "q[#{k}]", v %>
		    <% end unless params[:q].blank? %>
		    <%= hidden_field_tag(:page, params[:page]) unless params[:page].blank? %>
		    
	        <%= render partial: "/form_actions_top", locals: {
	            resource_class: EdpexKkuGroup, resource: @edpex_kku_group, f: f,
	            resources_url: edpex_kku_groups_path(q: params[:q], page: params[:page]),
	            resource_url: @edpex_kku_group.new_record? ? nil : edpex_kku_group_path(@edpex_kku_group, q: params[:q], page: params[:page]),
	            edit_resource_url: @edpex_kku_group.new_record? ? nil : edit_edpex_kku_group_path(@edpex_kku_group, q: params[:q], page: params[:page])
	        } unless params[:modal] %>

		  	<fieldset>

	        	<%= f.input :no %>
				<%= f.input :name %>
	            
		  		<div class="col-md-6 col-md-offset-4">
			        <%= render partial: "/form_actions_bottom", locals: {
			            resource_class: EdpexKkuGroup, resource: @edpex_kku_group, f: f,
			            resources_url: edpex_kku_groups_path(q: params[:q], page: params[:page]),
			            resource_url: @edpex_kku_group.new_record? ? nil : edpex_kku_group_path(@edpex_kku_group, q: params[:q], page: params[:page]),
			            edit_resource_url: @edpex_kku_group.new_record? ? nil : edit_edpex_kku_group_path(@edpex_kku_group, q: params[:q], page: params[:page])
			        } %>
		        </div>
		  	</fieldset>
		<% end %>
  	</div>
</div>		
