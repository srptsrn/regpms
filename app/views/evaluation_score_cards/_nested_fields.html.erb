<!-- replace 'parent_object' with your parent object name -->
<% 
	f_index = "#{f.index}".to_s
	object_name = "parent_object_evaluation_score_cards_attributes_#{f_index}".to_sym
	evaluation_select_id = "parent_object_evaluation_score_cards_attributes_#{f_index}_evaluation_id".to_sym
	user_select_id = "parent_object_evaluation_score_cards_attributes_#{f_index}_user_id".to_sym
	committee_select_id = "parent_object_evaluation_score_cards_attributes_#{f_index}_committee_id".to_sym
%> 
<tr class="nested-fields">
    <td style="vertical-align:top;">
        <%= f.association :evaluation, wrapper: :nested_form, collection: (Evaluation.all + (f.object.evaluation.nil? ? [] : [f.object.evaluation])).uniq.sort_by {|asso| asso.to_s}, value_method: :id, label_method: :to_s, input_html: {data: {placeholder: t(:choose)}} %>
        <%= render partial: "/evaluations/chosen_select", locals: {object_name: :evaluation_score_card, no_create: true, select_id: evaluation_select_id} %>
    </td>
    <td style="vertical-align:top;">
        <%= f.association :user, wrapper: :nested_form, collection: (User.all + (f.object.user.nil? ? [] : [f.object.user])).uniq.sort_by {|asso| asso.to_s}, value_method: :id, label_method: :to_s, input_html: {data: {placeholder: t(:choose)}} %>
        <%= render partial: "/users/chosen_select", locals: {object_name: :evaluation_score_card, no_create: true, select_id: user_select_id} %>
    </td>
    <td style="vertical-align:top;">
        <%= f.association :committee, wrapper: :nested_form, collection: (Committee.all + (f.object.committee.nil? ? [] : [f.object.committee])).uniq.sort_by {|asso| asso.to_s}, value_method: :id, label_method: :to_s, input_html: {data: {placeholder: t(:choose)}} %>
        <%= render partial: "/committees/chosen_select", locals: {object_name: :evaluation_score_card, no_create: true, select_id: committee_select_id} %>
    </td>
    <td style="vertical-align:top;">
        <%= f.input :role, wrapper: :nested_form %>
    </td>
    <td style="vertical-align:top;">
        <%= f.input :task_score, wrapper: :nested_form %>
    </td>
    <td style="vertical-align:top;">
        <%= f.input :ability_score, wrapper: :nested_form %>
    </td>
    <% unless action_name == "show" %>
        <td style="vertical-align:top;">
            <%= link_to_remove_association f, class: "btn btn-sm btn-danger" do %>
               <i class='fa fa-trash-o'></i>
            <% end %>
			<script type="text/javascript">$(document).ready( function() { jQuery(function($){ $("#parent_object_evaluation_score_cards_attributes_<%= f.index %>_evaluation").chosen({width: "100%"}); }); });</script>
			<script type="text/javascript">$(document).ready( function() { jQuery(function($){ $("#parent_object_evaluation_score_cards_attributes_<%= f.index %>_user").chosen({width: "100%"}); }); });</script>
			<script type="text/javascript">$(document).ready( function() { jQuery(function($){ $("#parent_object_evaluation_score_cards_attributes_<%= f.index %>_committee").chosen({width: "100%"}); }); });</script>
        </td>
    <% end %>
</tr>