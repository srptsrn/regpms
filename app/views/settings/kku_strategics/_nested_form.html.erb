<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th nowrap><%= KkuStrategic.human_attribute_name :kku_strategic_pillar %></th>
            <th nowrap><%= KkuStrategic.human_attribute_name :no %></th>
            <th nowrap><%= KkuStrategic.human_attribute_name :name %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;">
                    <%= link_to_add_association f, :kku_strategics, partial: "/settings/kku_strategics/nested_fields", class: "btn btn-sm btn-success",
                    "data-association-insertion-node" => "#kku_strategic_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus'></i>
                    <% end %>
                </th>
            <% end %>
        </tr>
    </thead>
    <tbody id="kku_strategic_fields">
        <%= f.simple_fields_for :kku_strategics do |kku_strategic| %>
            <%= render '/settings/kku_strategics/nested_fields', :f => kku_strategic %>
        <% end %>
    </tbody>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#kku_strategic_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>