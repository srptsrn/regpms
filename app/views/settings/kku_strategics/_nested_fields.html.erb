<!-- replace 'parent_object' with your parent object name -->
<% 
	f_index = "#{f.index}".to_s
	object_name = "parent_object_kku_strategics_attributes_#{f_index}".to_sym
	kku_strategic_pillar_select_id = "parent_object_kku_strategics_attributes_#{f_index}_kku_strategic_pillar_id".to_sym
%> 
<tr class="nested-fields">
    <td style="vertical-align:top;">
        <%= f.association :kku_strategic_pillar, wrapper: :nested_form, collection: (KkuStrategicPillar.all + (f.object.kku_strategic_pillar.nil? ? [] : [f.object.kku_strategic_pillar])).uniq.sort_by {|asso| asso.to_s}, value_method: :id, label_method: :to_s, input_html: {data: {placeholder: t(:choose)}} %>
        <%= render partial: "/kku_strategic_pillars/chosen_select", locals: {object_name: :kku_strategic, no_create: true, select_id: kku_strategic_pillar_select_id} %>
    </td>
    <td style="vertical-align:top;">
        <%= f.input :no, wrapper: :nested_form %>
    </td>
    <td style="vertical-align:top;">
        <%= f.input :name, wrapper: :nested_form %>
    </td>
    <% unless action_name == "show" %>
        <td style="vertical-align:top;">
            <%= link_to_remove_association f, class: "btn btn-sm btn-danger" do %>
               <i class='fa fa-trash-o'></i>
            <% end %>
			<script type="text/javascript">$(document).ready( function() { jQuery(function($){ $("#parent_object_kku_strategics_attributes_<%= f.index %>_kku_strategic_pillar").chosen({width: "100%"}); }); });</script>
        </td>
    <% end %>
</tr>