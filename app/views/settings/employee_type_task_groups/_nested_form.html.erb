<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th nowrap style="width:90px;"><%= EmployeeTypeTaskGroup.human_attribute_name :sorting %></th>
            <th nowrap><%= EmployeeTypeTaskGroup.human_attribute_name :name %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;">
                    <%= link_to_add_association f, :employee_type_task_groups, partial: "/settings/employee_type_task_groups/nested_fields", class: "btn btn-sm btn-success",
                    "data-association-insertion-node" => "#employee_type_task_group_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus'></i>
                    <% end %>
                </th>
            <% end %>
        </tr>
    </thead>
    <tbody id="employee_type_task_group_fields">
        <%= f.simple_fields_for :employee_type_task_groups do |employee_type_task_group| %>
            <%= render '/settings/employee_type_task_groups/nested_fields', :f => employee_type_task_group %>
        <% end %>
    </tbody>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#employee_type_task_group_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>