<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th nowrap><%= Evaluation.human_attribute_name :year %></th>
            <th nowrap><%= Evaluation.human_attribute_name :episode %></th>
            <th nowrap><%= Evaluation.human_attribute_name :pd_start_date %></th>
            <th nowrap><%= Evaluation.human_attribute_name :pd_end_date %></th>
            <th nowrap><%= Evaluation.human_attribute_name :pf_start_date %></th>
            <th nowrap><%= Evaluation.human_attribute_name :pf_end_date %></th>
            <th nowrap><%= Evaluation.human_attribute_name :confirm_start_date %></th>
            <th nowrap><%= Evaluation.human_attribute_name :confirm_end_date %></th>
            <th nowrap><%= Evaluation.human_attribute_name :evaluation_start_date %></th>
            <th nowrap><%= Evaluation.human_attribute_name :evaluation_end_date %></th>
            <th nowrap><%= Evaluation.human_attribute_name :director %></th>
            <th nowrap><%= Evaluation.human_attribute_name :vice_director %></th>
            <th nowrap><%= Evaluation.human_attribute_name :secretary %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;">
                    <%= link_to_add_association f, :evaluations, partial: "/settings/evaluations/nested_fields", class: "btn btn-sm btn-success",
                    "data-association-insertion-node" => "#evaluation_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus'></i>
                    <% end %>
                </th>
            <% end %>
        </tr>
    </thead>
    <tbody id="evaluation_fields">
        <%= f.simple_fields_for :evaluations do |evaluation| %>
            <%= render '/settings/evaluations/nested_fields', :f => evaluation %>
        <% end %>
    </tbody>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#evaluation_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>