<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th nowrap><%= EvaluationPrinciple.human_attribute_name :task %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;">
                    <%= link_to_add_association f, :evaluation_principles, partial: "/settings/evaluation_principles/nested_fields", class: "btn btn-sm btn-success",
                    "data-association-insertion-node" => "#evaluation_principle_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus'></i>
                    <% end %>
                </th>
            <% end %>
        </tr>
    </thead>
    <tbody id="evaluation_principle_fields">
        <%= f.simple_fields_for :evaluation_principles do |evaluation_principle| %>
            <%= render '/settings/evaluation_principles/nested_fields', :f => evaluation_principle %>
        <% end %>
    </tbody>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#evaluation_principle_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>