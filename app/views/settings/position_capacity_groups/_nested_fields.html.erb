<!-- replace 'position' with your parent object name -->
<% 
	f_index = "#{f.index}".to_s
	object_name = "position_position_capacity_groups_attributes_#{f_index}".to_sym
%> 
<tr class="nested-fields">
    <td class="text-top">
        <%= f.input :sorting, wrapper: :nested_form %>
    </td>
    <td class="text-top">
        <%= f.input :name, wrapper: :nested_form %>
        
        <%= render partial: "/settings/position_capacities/nested_form", locals: {f: f, parent_object_name: object_name} %>
    </td>
    <% unless action_name == "show" %>
        <td class="text-top">
            <%= link_to_remove_association f, class: "btn btn-sm btn-danger" do %>
               <i class='fa fa-trash-o'></i>
            <% end %>
        </td>
    <% end %>
</tr>