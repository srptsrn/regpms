<!-- replace 'parent_object' with your parent object name -->
<% 
	f_index = "#{f.index}".to_s
	object_name = "parent_object_employee_type_users_attributes_#{f_index}".to_sym
	employee_type_select_id = "parent_object_employee_type_users_attributes_#{f_index}_employee_type_id".to_sym
	user_select_id = "parent_object_employee_type_users_attributes_#{f_index}_user_id".to_sym
	evaluation_select_id = "parent_object_employee_type_users_attributes_#{f_index}_evaluation_id".to_sym
%> 
<tr class="nested-fields">
    <td class="text-top">
        <%= f.association :employee_type, wrapper: :nested_form, collection: (EmployeeType.all + (f.object.employee_type.nil? ? [] : [f.object.employee_type])).uniq.sort_by {|asso| asso.to_s}, value_method: :id, label_method: :to_s, input_html: {data: {placeholder: t(:choose)}} %>
        <%= render partial: "/employee_types/chosen_select", locals: {object_name: :employee_type_user, no_create: true, select_id: employee_type_select_id} %>
    </td>
    <td class="text-top">
        <%= f.association :user, wrapper: :nested_form, collection: (User.all + (f.object.user.nil? ? [] : [f.object.user])).uniq.sort_by {|asso| asso.to_s}, value_method: :id, label_method: :to_s, input_html: {data: {placeholder: t(:choose)}} %>
        <%= render partial: "/users/chosen_select", locals: {object_name: :employee_type_user, no_create: true, select_id: user_select_id} %>
    </td>
    <td class="text-top">
        <%= f.association :evaluation, wrapper: :nested_form, collection: (Evaluation.all + (f.object.evaluation.nil? ? [] : [f.object.evaluation])).uniq.sort_by {|asso| asso.to_s}, value_method: :id, label_method: :to_s, input_html: {data: {placeholder: t(:choose)}} %>
        <%= render partial: "/evaluations/chosen_select", locals: {object_name: :employee_type_user, no_create: true, select_id: evaluation_select_id} %>
    </td>
    <% unless action_name == "show" %>
        <td class="text-top">
            <%= link_to_remove_association f, class: "btn btn-sm btn-danger" do %>
               <i class='fa fa-trash-o'></i>
            <% end %>
			<script type="text/javascript">$(document).ready( function() { jQuery(function($){ $("#parent_object_employee_type_users_attributes_<%= f.index %>_employee_type").chosen({width: "100%"}); }); });</script>
			<script type="text/javascript">$(document).ready( function() { jQuery(function($){ $("#parent_object_employee_type_users_attributes_<%= f.index %>_user").chosen({width: "100%"}); }); });</script>
			<script type="text/javascript">$(document).ready( function() { jQuery(function($){ $("#parent_object_employee_type_users_attributes_<%= f.index %>_evaluation").chosen({width: "100%"}); }); });</script>
        </td>
    <% end %>
</tr>