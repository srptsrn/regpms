<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th nowrap><%= TeamUser.human_attribute_name :user %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;">
                    <%= link_to_add_association f, :team_users, partial: "/settings/team_users/nested_fields", class: "btn btn-sm btn-success",
                    "data-association-insertion-node" => "#team_user_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus'></i>
                    <% end %>
                </th>
            <% end %>
        </tr>
    </thead>
    <tbody id="team_user_fields">
        <%= f.simple_fields_for :team_users do |team_user| %>
            <%= render '/settings/team_users/nested_fields', :f => team_user %>
        <% end %>
    </tbody>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#team_user_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>