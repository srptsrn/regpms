<!-- replace 'parent_object' with your parent object name -->
<% 
	f_index = "#{f.index}".to_s
	object_name = "parent_object_tactics_attributes_#{f_index}".to_sym
	strategy_select_id = "parent_object_tactics_attributes_#{f_index}_strategy_id".to_sym
%> 
<tr class="nested-fields">
    <td style="vertical-align:top;">
        <%= f.input :sorting, wrapper: :nested_form %>
    </td>
    <td style="vertical-align:top;">
        <%= f.input :name, wrapper: :nested_form %>
    </td>
    <% unless action_name == "show" %>
        <td style="vertical-align:top;">
            <%= link_to_remove_association f, class: "btn btn-sm btn-danger" do %>
               <i class='fa fa-trash-o'></i>
            <% end %>
			<script type="text/javascript">$(document).ready( function() { jQuery(function($){ $("#parent_object_tactics_attributes_<%= f.index %>_strategy").chosen({width: "100%"}); }); });</script>
        </td>
    <% end %>
</tr>