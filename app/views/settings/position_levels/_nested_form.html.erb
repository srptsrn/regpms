<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th nowrap><%= PositionLevel.human_attribute_name :name %></th>
            <th nowrap><%= PositionLevel.human_attribute_name :sorting %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;">
                    <%= link_to_add_association f, :position_levels, partial: "/settings/position_levels/nested_fields", class: "btn btn-sm btn-success",
                    "data-association-insertion-node" => "#position_level_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus'></i>
                    <% end %>
                </th>
            <% end %>
        </tr>
    </thead>
    <tbody id="position_level_fields">
        <%= f.simple_fields_for :position_levels do |position_level| %>
            <%= render '/settings/position_levels/nested_fields', :f => position_level %>
        <% end %>
    </tbody>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#position_level_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>