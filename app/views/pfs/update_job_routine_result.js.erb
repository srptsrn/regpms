<% if @error_message.blank? %>
	<% if params[:replace] %>
		$('#job-routine-result-row-<%= @job_routine_result.id %>').replaceWith("<%=j render(partial: "row_job_routine_result", locals: {job_routine_result: @job_routine_result}) %>");
	<% else %>
		$('#job-routine-result-row-<%= @job_routine_result.id %>').effect("highlight");
	
		if($('#job_routine_result_<%= @job_routine_result.id %>_qty').val() == ''){
			$('#job_routine_result_<%= @job_routine_result.id %>_qty').parent().addClass('has-error');
		}else{
			$('#job_routine_result_<%= @job_routine_result.id %>_qty').parent().removeClass('has-error');
		}
		
		if($('#job_routine_result_<%= @job_routine_result.id %>_unit').val() == ''){
			$('#job_routine_result_<%= @job_routine_result.id %>_unit').parent().addClass('has-error');
		}else{
			$('#job_routine_result_<%= @job_routine_result.id %>_unit').parent().removeClass('has-error');
		}
		
	<% end %>
<% else %>
	alert('<%=h @error_message %>');
<% end %>
