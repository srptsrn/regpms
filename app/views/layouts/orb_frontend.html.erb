<!DOCTYPE HTML>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="keywords" content="<%= t(:application_keyword) %>">
		<meta name="author" content="<%= t(:application_author) %>">
		<meta name="description" content="<%= t(:application_description) %>">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title><%= t(:application_name) %> | <%= controller_name.singularize.upcase.gsub('_', ' ') %> : <%= action_name %></title>
		<link rel="shortcut icon" type="image/x-icon" href="/orb/frontend/favicon.ico" />
		<link rel="stylesheet" type="text/css" href="/orb/frontend/css/frontend.css">
		<script type="text/javascript" src="/orb/frontend/js/vendors/modernizr/modernizr.custom.js"></script>
		
		<!--JQuery--> 
		<script type="text/javascript" src="/orb/js/vendors/jquery/jquery.min.js"></script> 
		<script type="text/javascript" src="/orb/js/vendors/jquery/jquery-ui.min.js"></script> 
		
        <%= javascript_include_tag "application", debug: false %>
        <%= csrf_meta_tags %>
        
	</head>

	<body>
		<div class="smooth-overflow frontend"> 
  
			<!--Navigation-->
  
			<nav class="navbar navbar-inverse" role="navigation">
				<div class="container-fluid"> 
					<!-- Brand and toggle get grouped for better mobile display -->
					<div class="navbar-header">
						<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"> 
							<span class="sr-only">Toggle navigation</span> 
							<span class="icon-bar"></span> 
							<span class="icon-bar"></span> 
							<span class="icon-bar"></span> 
						</button>
						<%= link_to root_url, {class: "navbar-brand text-blue"} do %>
							<%= t(:application_name) %>
						<% end %>
					</div>
		  			<!-- Collect the nav links, forms, and other content for toggling -->
					<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
						<%= render partial: "/layouts/orb_frontend/nav" %>
						<%= render partial: "/layouts/orb_frontend/sign_form" %>
					</div>
					<!-- /.navbar-collapse --> 
				</div>
				<!-- /.container-fluid --> 
			</nav>
			<!--/Navigation--> 
  
		  	<!--Carousel-->
		  	<%#= render partial: "/layouts/orb_frontend/main_carousel" %>
		  	<!--/Carousel-->
  
			<div class="container frontend">
    			<div class="row">
      				<div class="col-sm-8 col-md-8"> 
                    	<%= render partial: "/layouts/orb_frontend/flashes" %>
						<%= yield %>
      				</div>
			      	<div class="col-sm-4 col-md-4 margin-top">
				        <div class="text-widget">
							<%= render partial: "/layouts/orb_frontend/user" %>
			        	</div>
				        <div class="text-widget">
							<%= render partial: "/layouts/orb_frontend/calendar" %>
			        	</div>
				        <div class="text-widget">
							<%= render partial: "/layouts/orb_frontend/news_calendar" %>
			        	</div>
      				</div>
				</div>
		  	</div>
			<!-- Page Ends --> 
  
			<!--Footer-->
			<%= render partial: "/layouts/orb_frontend/footer" %>
			<!--Footer--> 
		</div>
		
		<!--Sign Out Dialog Modal-->
		<%= render partial: "/layouts/orb/modal_signout" %>

		<!-- scroll top -->
		<div class="scroll-top-wrapper hidden-xs"> <i class="fa fa-angle-up"></i> </div>
		<!-- /scroll top --> 
		
		<!--BS-->
		<script type="text/javascript" src="/orb/frontend/js/vendors/bootstrap/bootstrap.min.js"></script> 
		
		<!--Forms--> 
		<script type="text/javascript" src="/orb/frontend/js/vendors/forms/jquery.form.min.js"></script> 
		<script type="text/javascript" src="/orb/frontend/js/vendors/forms/jquery.validate.min.js"></script> 
		<script type="text/javascript" src="/orb/frontend/js/vendors/forms/jquery.maskedinput.min.js"></script> 
		
		
		<!--Main Script--> 
		<script type="text/javascript" src="/orb/frontend/js/frontend.js"></script>
		
        <script type="text/javascript">
			$(document).ready( function() {

			    // Inline datepicker
			    if ($('#calendar-widget').length) {
			        $('#calendar-widget').datepicker({
			            dateFormat: 'dd/mm/yy',
			            prevText: '<i class="fa fa-chevron-left"></i>',
			            nextText: '<i class="fa fa-chevron-right"></i>',
			            onSelect: function(date) {
					 		$.ajax({
				            	url: '<%= chose_date_news_calendar_frontend_url %>',
				    			type: 'post',
				    			data: {new_calendars_date: date},
				                dataType: 'script'
				            });
			            }
			        });
			    }

			});
        </script>
		
	</body>
</html>
