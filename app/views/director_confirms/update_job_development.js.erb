<% if @error_message.blank? %>

	$('#job-development-row-<%= @job_development.id %>').replaceWith("<%=j render(partial: "row_job_development", locals: {job_development: @job_development}) %>");
	$('#job-development-row-<%= @job_development.id %>').effect("highlight");
	
<% else %>
	
	if($('#job_development_<%= @job_development.id %>_name').val() == ''){
		$('#job_development_<%= @job_development.id %>_name').parent().addClass('has-error');
	}else{
		$('#job_development_<%= @job_development.id %>_name').parent().removeClass('has-error');
	}
	
	if($('#job_development_<%= @job_development.id %>_expect').val() == ''){
		$('#job_development_<%= @job_development.id %>_expect').parent().addClass('has-error');
	}else{
		$('#job_development_<%= @job_development.id %>_expect').parent().removeClass('has-error');
	}
	
	if($('#job_development_<%= @job_development.id %>_weight').val() == ''){
		$('#job_development_<%= @job_development.id %>_weight').parent().addClass('has-error');
	}else{
		$('#job_development_<%= @job_development.id %>_weight').parent().removeClass('has-error');
	}
	
	alert('<%=h @error_message %>\r\n<%= @job_development.errors.full_messages.join("\\r\\n") %>');
	
<% end %>
