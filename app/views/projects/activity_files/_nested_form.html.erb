<div class="form-group">
	<label class="col-md-4 control-label"><%= ActivityFile.human_attribute_name :file %></label>
	<div class="col-md-6">
	    <div id="activity_file_fields" class="no-padding no-margin">
	        <%= f.simple_fields_for :activity_files do |activity_file| %>
	            <%= render '/projects/activity_files/nested_fields', :f => activity_file %>
	        <% end %>
	    </div>
	    <div class="clearfix"></div>
        <% unless action_name == "show" %>
            <%= link_to_add_association f, :activity_files, partial: "/projects/activity_files/nested_fields", class: "btn btn-success",
            "data-association-insertion-node" => "#activity_file_fields",
            "data-association-insertion-method" => :append do %>
            <i class='fa fa-plus'></i>
            <% end %>
        <% end %>
	</div>
</div>
<script type="text/javascript">
    jQuery(function($) {
        $('#activity_file_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>