<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th nowrap style="width:80px;"><%= Responsible.human_attribute_name :sorting %></th>
            <th nowrap style="width:250px;"><%= Responsible.human_attribute_name :user %></th>
            <th nowrap style="width:120px;"><%= Responsible.human_attribute_name :prefix %></th>
            <th nowrap><%= Responsible.human_attribute_name :firstname %></th>
            <th nowrap><%= Responsible.human_attribute_name :lastname %></th>
            <th nowrap><%= Responsible.human_attribute_name :position %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;"></th>
            <% end %>
        </tr>
    </thead>
    <tbody id="responsible_fields">
        <%= f.simple_fields_for :responsibles do |responsible| %>
            <%= render '/projects/responsibles/nested_fields', :f => responsible %>
        <% end %>
    </tbody>
    <tbody>
        <% unless action_name == "show" %>
        	<tr>
            	<th colspan="6">
                    <%= link_to_add_association f, :responsibles, partial: "/projects/responsibles/nested_fields", class: "btn btn-default col-xs-12",
                    "data-association-insertion-node" => "#responsible_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus text-white'></i>
                    <% end %>
            	</th>
            	<th></th>
        	</tr>
        <% end %>
    </tbody>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#responsible_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>