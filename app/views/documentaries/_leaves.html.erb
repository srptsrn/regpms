<% @result_leaves ||= {} %>
<% @result_leaves["summary"] ||= {} %>
<% @result_leaves["leaves"] ||= {} %>
<div class="row">
	<div class="inner-spacer">
		<div class="col-md-12 bootstrap-grid">
			<div class="powerwidget yellow no-margin">
		  		<header>
		    		<h2>การลางาน<small><%= %{#{@query_start_date ? @query_start_date.strftime("%d/%m/%Y") : ""} - #{@query_end_date ? @query_end_date.strftime("%d/%m/%Y") : ""}} %>...</small></h2>
		  		</header>
				<div class="inner-spacer">
					<table class="table table-striped table-hover margin-0px">
				      	<thead>
				        	<tr>
				                <th>ประเภทการลา</th>
				                <th style="width:70px; text-align:center;">จำนวนวัน</th>
				        	</tr>
				      	</thead>
				      	<tbody>
							<% @result_leaves["summary"].each do |summary| %>
				        		<tr>
									<td><%= summary["type"] %></td>
									<td style="text-align:right;"><%= summary["weight"] %></td>
				            	</tr>
				        	<% end if @result_leaves["summary"] %>
				        	<tr><td colspan="2" style="text-align:right;"><%= link_to "แสดงรายละเอียด", "#", {class: "btn btn-xs btn-default", id: "leave-link"} %></td></tr>
				      	</tbody>
				    </table>
				</div>
				
				<div class="inner-spacer">
					<table id="leave-details" class="table table-striped table-hover margin-0px no-padding hide">
				      	<thead>
				        	<tr>
				                <th>ประเภทการลา</th>
				                <th style="width:90px; text-align:center;">จากวันที่</th>
				                <th style="width:90px; text-align:center;">ถึงวันที่</th>
				                <th style="width:70px; text-align:center;">จำนวนวัน</th>
				        	</tr>
				      	</thead>
				      	<tbody>
							<% @result_leaves["leaves"].each do |leave| %>
				        		<tr>
									<td><%= leave["type"] %></td>
									<td class="text-center">
										<%= leave["from_date"] %>
										<%= leave["from_period"] %>
									</td>
									<td class="text-center">
										<%= leave["to_date"] %>
										<%= leave["to_period"] %>
									</td>
									<td class="text-center"><%= leave["weight"] %></td>
				            	</tr>
				        	<% end if @result_leaves["leaves"] %>
				      	</tbody>
				    </table>
				</div>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	$("#leave-link").click(function() {
		$("#leave-details").toggleClass('hide');
	});
</script>
