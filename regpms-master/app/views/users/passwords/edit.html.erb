<% if false %>
	<h2>Change your password</h2>
	
	<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
	  <%= f.error_notification %>
	
	  <%= f.input :reset_password_token, as: :hidden %>
	  <%= f.full_error :reset_password_token %>
	
	  <div class="form-inputs">
	    <%= f.input :password, label: "New password", required: true, autofocus: true %>
	    <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
	  </div>
	
	  <div class="form-actions">
	    <%= f.button :submit, "Change my password" %>
	  </div>
	<% end %>
	
	<%= render "users/shared/links" %>

<% elsif controller.send(:_layout) == "orb_login" %>

	<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put, id: "login-form", class: "orb-form"}) do |f| %>
	
  		<%= f.input :reset_password_token, as: :hidden %>
		<%= f.full_error :reset_password_token %>

    	<header>
			<div class="image-block"><img src="/logo_th.png" alt="User" /></div>
      		Change your password
  		</header>
  		
    	<fieldset>
			<%= f.input :password, wrapper: :login, required: true, autofocus: true, hint: "<i class='fa fa-lock'></i>".html_safe, input_html: {placeholder: "Password"} %>
			<%= f.input :password_confirmation, wrapper: :login, required: true, hint: "<i class='fa fa-lock'></i>".html_safe, input_html: {placeholder: "Confirm password"} %>
		    <%= f.button :button, class: "btn btn-primary col col-xs-12" do %>
		    	Change my password
		    <% end %>
    	</fieldset>
		      
      <% end %>

<% elsif controller.send(:_layout) == "orb_frontend" %>

	<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put, id: "login-form", class: "orb-form"}) do |f| %>
	
