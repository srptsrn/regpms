<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th nowrap><%= UserGroup.human_attribute_name :name %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;">
                    <%= link_to_add_association f, :user_groups, partial: "/admin/user_groups/nested_fields", class: "btn btn-sm btn-success",
                    "data-association-insertion-node" => "#user_group_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus'></i>
                    <% end %>
                </th>
            <% end %>
        </tr>
    </thead>
    <tbody id="user_group_fields">
        <%= f.simple_fields_for :user_groups do |user_group| %>
            <%= render '/admin/user_groups/nested_fields', :f => user_group %>
        <% end %>
    </tbody>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#user_group_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>