<% if @error_message.blank? %>
	<% if params[:replace] %>
		$('#job-plan-result-row-<%= @job_plan_result.id %>').replaceWith("<%=j render(partial: "row_job_plan_result", locals: {job_plan_result: @job_plan_result}) %>");
	<% else %>
		$('#job-plan-result-row-<%= @job_plan_result.id %>').effect("highlight");
	
		if($('#job_plan_result_<%= @job_plan_result.id %>_qty').val() == ''){
			$('#job_plan_result_<%= @job_plan_result.id %>_qty').parent().addClass('has-error');
		}else{
			$('#job_plan_result_<%= @job_plan_result.id %>_qty').parent().removeClass('has-error');
		}
		
		if($('#job_plan_result_<%= @job_plan_result.id %>_unit').val() == ''){
			$('#job_plan_result_<%= @job_plan_result.id %>_unit').parent().addClass('has-error');
		}else{
			$('#job_plan_result_<%= @job_plan_result.id %>_unit').parent().removeClass('has-error');
		}
		
	<% end %>
<% else %>
	alert('<%=h @error_message %>');
<% end %>
