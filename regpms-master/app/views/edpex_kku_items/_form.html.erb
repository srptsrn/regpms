<% @form_defaults = {input_html: {autocomplete: :off}} %>
<% @form_defaults[:disabled] = (action_name == "show") || (@edpex_kku_item.respond_to?(:current_state) && @edpex_kku_item.current_state.meta[:disabled]) %>
<div data-widget-editbutton="false" id="power-forms-grid" class="powerwidget cold-grey" role="widget">
	<div class="inner-spacer" role="content">

		<%= simple_form_for(@edpex_kku_item, html: {class: 'form-horizontal'}, defaults: @form_defaults) do |f| %>
	    	<% params[:q].each do |k,v| %>
		        <%= hidden_field_tag "q[#{k}]", v %>
		    <% end unless params[:q].blank? %>
		    <%= hidden_field_tag(:page, params[:page]) unless params[:page].blank? %>
		    
	        <%= render partial: "/form_actions_top", locals: {
	            resource_class: EdpexKkuItem, resource: @edpex_kku_item, f: f,
	            resources_url: edpex_kku_items_path(q: params[:q], page: params[:page]),
	            resource_url: @edpex_kku_item.new_record? ? nil : edpex_kku_item_path(@edpex_kku_item, q: params[:q], page: params[:page]),
	            edit_resource_url: @edpex_kku_item.new_record? ? nil : edit_edpex_kku_item_path(@edpex_kku_item, q: params[:q], page: params[:page])
	        } unless params[:modal] %>

		  	<fieldset>

		        <%= f.association :edpex_kku, collection: (EdpexKku.all + (f.object.edpex_kku.nil? ? [] : [f.object.edpex_kku])).uniq.sort_by {|asso| asso.to_s}, value_method: :id, label_method: :to_s, input_html: {data: {placeholder: t(:choose)}} %>
		        <%= render partial: "/edpex_kkus/chosen_select", locals: {object_name: :edpex_kku_item, no_create: true} %>
	        	<%= f.input :no %>
				<%= f.input :name %>
	        	<%= f.input :target %>
	        	<%= f.input :year1 %>
	        	<%= f.input :year2 %>
	        	<%= f.input :year3 %>
	        	<%= f.input :year4 %>
	        	<%= f.input :year5 %>
	        	<%= f.input :year %>
	        	<%= f.input :institute %>
	            
		  		<div class="col-md-6 col-md-offset-4">
			        <%= render partial: "/form_actions_bottom", locals: {
			            resource_class: EdpexKkuItem, resource: @edpex_kku_item, f: f,
			            resources_url: edpex_kku_items_path(q: params[:q], page: params[:page]),
			            resource_url: @edpex_kku_item.new_record? ? nil : edpex_kku_item_path(@edpex_kku_item, q: params[:q], page: params[:page]),
			            edit_resource_url: @edpex_kku_item.new_record? ? nil : edit_edpex_kku_item_path(@edpex_kku_item, q: params[:q], page: params[:page])
			        } %>
		        </div>
		  	</fieldset>
		<% end %>
  	</div>
</div>		
