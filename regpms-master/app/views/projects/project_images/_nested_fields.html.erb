<!-- replace 'parent_object' with your parent object name -->
<% 
	f_index = "#{f.index}".to_s
	object_name = "parent_object_project_images_attributes_#{f_index}".to_sym
	project_select_id = "parent_object_project_images_attributes_#{f_index}_project_id".to_sym
%> 
<div class="nested-fields pull-left margin-right-10 margin-bottom-10 padding-5 form-control" style="width:165px; height:230px;">
    <% unless action_name == "show" %>
        <div class="text-top">
            <%= link_to_remove_association f, class: "btn btn-xs btn-danger pull-right margin-bottom-5" do %>
               <i class='fa fa-trash-o'></i>
            <% end %>
			<script type="text/javascript">$(document).ready( function() { jQuery(function($){ $("#parent_object_project_images_attributes_<%= f.index %>_project").chosen({width: "100%"}); }); });</script>
        </div>
    <% end %>
    <%= f.input :image, wrapper: :nested_form, as: :attachment_custom %>
    <div class="clearfix"></div>
</div>