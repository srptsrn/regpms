<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th nowrap style="width:80px;"><%= ProblemSuggesstion.human_attribute_name :sorting %></th>
            <th nowrap><%= ProblemSuggesstion.human_attribute_name :description %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;"></th>
            <% end %>
        </tr>
    </thead>
    <tbody id="problem_suggesstion_fields">
        <%= f.simple_fields_for :problem_suggesstions do |problem_suggesstion| %>
            <%= render '/projects/problem_suggesstions/nested_fields', :f => problem_suggesstion %>
        <% end %>
    </tbody>
    <% unless action_name == "show" %>
	    <tbody>
	        <tr>
	            <th nowrap colspan="2">
                    <%= link_to_add_association f, :problem_suggesstions, partial: "/projects/problem_suggesstions/nested_fields", class: "btn btn-default col-xs-12",
                    "data-association-insertion-node" => "#problem_suggesstion_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus text-white'></i>
                    <% end %>
                </th>
                <th></th>
	        </tr>
	    </tbody>
    <% end %>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#problem_suggesstion_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>