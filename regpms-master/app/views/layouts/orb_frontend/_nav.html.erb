<ul class="nav navbar-nav">
	<% @nav_items ||= [] %>
	<% @nav_items.each do |nav_item| %>
		<% if nav_item[:items] %>
			<li class="dropdown"> 
				<%= link_to "#", {class: "dropdown-toggle", data: {toggle: "dropdown"}} do %>
					<%= nav_item[:title] %> <span class="caret"></span>
				<% end %>
				<ul class="dropdown-menu" role="menu">
					<% nav_item[:items].each do |item| %>
						<li>
							<%= link_to item[:url], {target: item[:target]} do %>
								<%= item[:title] %>
							<% end %>
						</li>
					<% end %>
				</ul>
			</li>
		<% else %>
			<li>
				<%= link_to nav_item[:url], {target: nav_item[:target]} do %>
					<%= nav_item[:title] %>
				<% end %>
			</li>
		<% end %>
	<% end %>
</ul>