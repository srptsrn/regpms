<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th nowrap><%= EdpexKku.human_attribute_name :year %></th>
            <th nowrap><%= EdpexKku.human_attribute_name :edpex_kku_group %></th>
            <th nowrap><%= EdpexKku.human_attribute_name :no %></th>
            <th nowrap><%= EdpexKku.human_attribute_name :name %></th>
            <th nowrap><%= EdpexKku.human_attribute_name :description %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;">
                    <%= link_to_add_association f, :edpex_kkus, partial: "/edpex_kkus/nested_fields", class: "btn btn-sm btn-success",
                    "data-association-insertion-node" => "#edpex_kku_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus'></i>
                    <% end %>
                </th>
            <% end %>
        </tr>
    </thead>
    <tbody id="edpex_kku_fields">
        <%= f.simple_fields_for :edpex_kkus do |edpex_kku| %>
            <%= render '/edpex_kkus/nested_fields', :f => edpex_kku %>
        <% end %>
    </tbody>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#edpex_kku_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>