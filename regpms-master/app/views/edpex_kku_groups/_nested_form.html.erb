<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th nowrap><%= EdpexKkuGroup.human_attribute_name :no %></th>
            <th nowrap><%= EdpexKkuGroup.human_attribute_name :name %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;">
                    <%= link_to_add_association f, :edpex_kku_groups, partial: "/edpex_kku_groups/nested_fields", class: "btn btn-sm btn-success",
                    "data-association-insertion-node" => "#edpex_kku_group_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus'></i>
                    <% end %>
                </th>
            <% end %>
        </tr>
    </thead>
    <tbody id="edpex_kku_group_fields">
        <%= f.simple_fields_for :edpex_kku_groups do |edpex_kku_group| %>
            <%= render '/edpex_kku_groups/nested_fields', :f => edpex_kku_group %>
        <% end %>
    </tbody>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#edpex_kku_group_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>