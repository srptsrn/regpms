<tr class="nested-fields">
    <td>
        <span class="label <%= state_label_class(f.object.current_state.to_sym) %>"><%=t "workflow.state.#{f.object.current_state.to_sym}" %></span>
    </td>
    <td>
        <%= f.association :workflow_state_updater, collection: (WorkflowStateUpdater.limit(100) + (f.object.workflow_state_updater.nil? ? [] : [f.object.workflow_state_updater])).uniq, value_method: :id, label_method: :to_s, label: false, wrapper: false, "data-placeholder" => t(:choose) %>
    </td>
    <td>
        <%= f.association :user, collection: (User.limit(100) + (f.object.user.nil? ? [] : [f.object.user])).uniq, value_method: :id, label_method: :to_s, label: false, wrapper: false, "data-placeholder" => t(:choose) %>
    </td>
    <td>
        <%= f.association :evaluation, collection: (Evaluation.limit(100) + (f.object.evaluation.nil? ? [] : [f.object.evaluation])).uniq, value_method: :id, label_method: :to_s, label: false, wrapper: false, "data-placeholder" => t(:choose) %>
    </td>
    <td>
        <%= f.association :job_template, collection: (JobTemplate.limit(100) + (f.object.job_template.nil? ? [] : [f.object.job_template])).uniq, value_method: :id, label_method: :to_s, label: false, wrapper: false, "data-placeholder" => t(:choose) %>
    </td>
    <td>
        <%= f.input_field :name, size: 20 %>
    </td>
    <td>
        <%= f.input_field :duration %>
    </td>
    <td>
        <%= f.input_field :expect_qty %>
    </td>
    <td>
        <%= f.input_field :qty %>
    </td>
    <td>
        <%= f.input_field :unit, size: 20 %>
    </td>
    <td>
        <%= f.input_field :description, size: 40 %>
    </td>
    <td>
        <%= f.association :approver, collection: (Approver.limit(100) + (f.object.approver.nil? ? [] : [f.object.approver])).uniq, value_method: :id, label_method: :to_s, label: false, wrapper: false, "data-placeholder" => t(:choose) %>
    </td>
    <% unless action_name == "show" %>
        <td>
            <%= link_to_remove_association f, class: "btn btn-sm btn-danger" do %>
               <i class='fa fa-trash-o'></i>
            <% end %>
        </td>
    <% end %>
</tr>