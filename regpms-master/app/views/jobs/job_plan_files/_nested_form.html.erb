<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th nowrap style="width:180px;"><%= JobPlanFile.human_attribute_name :file %></th>
            <th nowrap><%= JobPlanFile.human_attribute_name :description %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;">
                    <%= link_to_add_association f, :job_plan_files, partial: "/jobs/job_plan_files/nested_fields", class: "btn btn-sm btn-success",
                    "data-association-insertion-node" => "#job_plan_file_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus'></i>
                    <% end %>
                </th>
            <% end %>
        </tr>
    </thead>
    <tbody id="job_plan_file_fields">
        <%= f.simple_fields_for :job_plan_files do |job_plan_file| %>
            <%= render '/jobs/job_plan_files/nested_fields', :f => job_plan_file %>
        <% end %>
    </tbody>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#job_plan_file_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>