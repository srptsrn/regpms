<% @form_defaults = {input_html: {autocomplete: :off}} %>
<% @form_defaults[:disabled] = (action_name == "show") || (@job_vice_file.respond_to?(:current_state) && @job_vice_file.current_state.meta[:disabled]) %>
<div data-widget-editbutton="false" id="power-forms-grid" class="powerwidget cold-grey" role="widget">
	<div class="inner-spacer" role="content">

		<%= simple_form_for(["jobs", @job_vice_file], html: {class: 'form-horizontal'}, defaults: @form_defaults) do |f| %>
	    	<% params[:q].each do |k,v| %>
		        <%= hidden_field_tag "q[#{k}]", v %>
		    <% end unless params[:q].blank? %>
		    <%= hidden_field_tag(:page, params[:page]) unless params[:page].blank? %>
		    
	        <%= render partial: "/form_actions_top", locals: {
	            resource_class: JobViceFile, resource: @job_vice_file, f: f,
	            resources_url: jobs_job_vice_files_path(q: params[:q], page: params[:page]),
	            resource_url: @job_vice_file.new_record? ? nil : jobs_job_vice_file_path(@job_vice_file, q: params[:q], page: params[:page]),
	            edit_resource_url: @job_vice_file.new_record? ? nil : edit_jobs_job_vice_file_path(@job_vice_file, q: params[:q], page: params[:page])
	        } unless params[:modal] %>

		  	<fieldset>

		        <%= f.association :job_vice, collection: (JobVice.all + (f.object.job_vice.nil? ? [] : [f.object.job_vice])).uniq.sort_by {|asso| asso.to_s}, value_method: :id, label_method: :to_s, input_html: {data: {placeholder: t(:choose)}} %>
		        <%= render partial: "/jobs/job_vices/chosen_select", locals: {object_name: :job_vice_file, no_create: true} %>
		        <%= f.input :file, as: :attachment_custom %>
				<%= f.input :description %>
	            
		  		<div class="col-md-6 col-md-offset-4">
			        <%= render partial: "/form_actions_bottom", locals: {
			            resource_class: JobViceFile, resource: @job_vice_file, f: f,
			            resources_url: jobs_job_vice_files_path(q: params[:q], page: params[:page]),
			            resource_url: @job_vice_file.new_record? ? nil : jobs_job_vice_file_path(@job_vice_file, q: params[:q], page: params[:page]),
			            edit_resource_url: @job_vice_file.new_record? ? nil : edit_jobs_job_vice_file_path(@job_vice_file, q: params[:q], page: params[:page])
			        } %>
		        </div>
		  	</fieldset>
		<% end %>
  	</div>
</div>		
