<%= link_to resources_url, {class: "btn #{event_btn_class(:back)}"} do %>
	<%= event_icon_tag(:back) %>  <%= t(:back_to_list) %>
<% end %>

<% if action_name == "edit" %>
	<%= link_to resource_url, {class: "btn #{event_btn_class(:show)} pull-right"} do %>
		<%= event_icon_tag(:show) %> <%= t(:show) %>
	<% end %>
<% end %>

<% if action_name == "show" && can?(:edit, resource) %>
    <%= link_to edit_resource_url, class: "btn #{event_btn_class(:edit)} pull-right" do %>
        <%= event_icon_tag(:edit) %> <%= t(:edit) %>
    <% end if !resource.respond_to?(:current_state) || (resource.respond_to?(:current_state) && !resource.current_state.meta[:disabled]) %>
<% end %>

<legend class="no-margin"></legend>