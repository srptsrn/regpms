
			      
<% if @current_evaluation %>
	<div class="row" id="powerwidgets">
		<div class="col-md-12 bootstrap-grid">
			<div class="powerwidget red" role="widget">
	      		<header role="heading">
	        		<h2><%= JobRoutine.model_name.human %><small>...</small></h2>
	      		</header>
	      		<div class="inner-spacer" role="content">
	  				<table class="table table-striped table-hover margin-0px">
	                  	<thead>
	                    	<tr>
	                            <th><%= JobRoutine.model_name.human %></th>
	                            <th style="text-align:center; width:120px;"><%= JobRoutine.human_attribute_name(:duration) %></th>
	                            <th style="text-align:center; width:120px;"><%= JobRoutine.human_attribute_name(:expect_qty) %></th>
	                    	</tr>
	                  	</thead>
	                  	<% job_routines = current_user.job_routines.where(["evaluation_id = ?", @current_evaluation.id]) %>
	                  	<tbody>
	                		<tr>
								<td class="text-top">
									<%= job_routines.size %>
								</td>
								<td style="vertical-align:top; text-align:center;"><%= job_routines.collect {|jr| jr.duration.to_f}.sum.to_s_comma %></td>
								<td style="vertical-align:top; text-align:center;"><%= job_routines.collect {|jr| jr.expect_qty.to_f}.sum.to_s_comma %></td>
	                    	</tr>
	                  	</tbody>
	                </table>
	          	</div>
	        </div>		
		</div>
	</div>
				      
