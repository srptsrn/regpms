<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th nowrap><%= EmployeeTypeTaskUser.human_attribute_name :employee_type_task %></th>
            <th nowrap><%= EmployeeTypeTaskUser.human_attribute_name :user %></th>
            <th nowrap><%= EmployeeTypeTaskUser.human_attribute_name :evaluation %></th>
            <th nowrap><%= EmployeeTypeTaskUser.human_attribute_name :committee %></th>
            <th nowrap><%= EmployeeTypeTaskUser.human_attribute_name :role %></th>
            <th nowrap><%= EmployeeTypeTaskUser.human_attribute_name :weight %></th>
            <th nowrap><%= EmployeeTypeTaskUser.human_attribute_name :score %></th>
            <th nowrap><%= EmployeeTypeTaskUser.human_attribute_name :score_real %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;">
                    <%= link_to_add_association f, :employee_type_task_users, partial: "/employee_type_task_users/nested_fields", class: "btn btn-sm btn-success",
                    "data-association-insertion-node" => "#employee_type_task_user_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus'></i>
                    <% end %>
                </th>
            <% end %>
        </tr>
    </thead>
    <tbody id="employee_type_task_user_fields">
        <%= f.simple_fields_for :employee_type_task_users do |employee_type_task_user| %>
            <%= render '/employee_type_task_users/nested_fields', :f => employee_type_task_user %>
        <% end %>
    </tbody>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#employee_type_task_user_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>