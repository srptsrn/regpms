<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th nowrap><%= JobTemplateGroup.human_attribute_name :workflow_state %></th>
            <th nowrap><%= JobTemplateGroup.human_attribute_name :workflow_state_updater %></th>
            <th nowrap><%= JobTemplateGroup.human_attribute_name :name %></th>
            <th nowrap><%= JobTemplateGroup.human_attribute_name :sorting %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;">
                    <%= link_to_add_association f, :job_template_groups, partial: "/settings/job_template_groups/nested_fields", class: "btn btn-sm btn-success",
                    "data-association-insertion-node" => "#job_template_group_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus'></i>
                    <% end %>
                </th>
            <% end %>
        </tr>
    </thead>
    <tbody id="job_template_group_fields">
        <%= f.simple_fields_for :job_template_groups do |job_template_group| %>
            <%= render '/settings/job_template_groups/nested_fields', :f => job_template_group %>
        <% end %>
    </tbody>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#job_template_group_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>