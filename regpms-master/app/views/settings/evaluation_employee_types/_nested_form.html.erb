<table class="table table-striped table-bordered table-hover no-margin-bottom">
    <thead>
        <tr>
            <th nowrap><%= EvaluationEmployeeType.human_attribute_name :employee_type %></th>
            <th style="width:120px; text-align:center; background-color:#5bc0de;"><%= EvaluationEmployeeType.human_attribute_name(:director_ratio_nested).html_safe %></th>
            <th style="width:120px; text-align:center; background-color:#5bc0de;"><%= EvaluationEmployeeType.human_attribute_name(:vice_director_ratio_nested).html_safe %></th>
            <th style="width:120px; text-align:center; background-color:#5bc0de;"><%= EvaluationEmployeeType.human_attribute_name(:vice_director2_ratio_nested).html_safe %></th>
            <th style="width:120px; text-align:center; background-color:#5bc0de;"><%= EvaluationEmployeeType.human_attribute_name(:vice_director3_ratio_nested).html_safe %></th>
            <th style="width:120px; text-align:center; background-color:#5bc0de;"><%= EvaluationEmployeeType.human_attribute_name(:secretary_ratio_nested).html_safe %></th>
            <th style="width:120px; text-align:center; background-color:#5bc0de;"><%= EvaluationEmployeeType.human_attribute_name(:section_leader_ratio_nested).html_safe %></th>
            <th style="width:100px; text-align:center; background-color:#3b8dbd;"><%= EvaluationEmployeeType.human_attribute_name(:task_ratio_nested).html_safe %></th>
            <th style="width:100px; text-align:center; background-color:#3b8dbd;"><%= EvaluationEmployeeType.human_attribute_name(:ability_ratio_nested).html_safe %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;">
                    <%= link_to_add_association f, :evaluation_employee_types, partial: "/settings/evaluation_employee_types/nested_fields", class: "btn btn-sm btn-success",
                    "data-association-insertion-node" => "#evaluation_employee_type_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus'></i>
                    <% end %>
                </th>
            <% end %>
        </tr>
    </thead>
    <tbody id="evaluation_employee_type_fields">
        <%= f.simple_fields_for :evaluation_employee_types do |evaluation_employee_type| %>
            <%= render '/settings/evaluation_employee_types/nested_fields', :f => evaluation_employee_type %>
        <% end %>
    </tbody>
</table>
<div class="text-danger small">
	*** ถ้าใช้การประเมินแบบ 360 ค่าน้ำหนักของผู้บังคับบัญชาชั้นต้นจะไม่ถูกนำไปใช้ในการคำนวน ***<br/>
	จะใช้สัดส่วนเป็น <br/>
	บุคลากร 40 : 20<br/>
	ผู้บริหาร 30 : 10<br/>
</div>
<div class="clearfix margin-bottom-20"></div>
<script type="text/javascript">
    jQuery(function($) {
        $('#evaluation_employee_type_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>