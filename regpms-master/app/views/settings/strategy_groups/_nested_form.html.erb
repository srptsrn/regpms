<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th nowrap><%= StrategyGroup.human_attribute_name :no %></th>
            <th nowrap><%= StrategyGroup.human_attribute_name :name %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;">
                    <%= link_to_add_association f, :strategy_groups, partial: "/settings/strategy_groups/nested_fields", class: "btn btn-sm btn-success",
                    "data-association-insertion-node" => "#strategy_group_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus'></i>
                    <% end %>
                </th>
            <% end %>
        </tr>
    </thead>
    <tbody id="strategy_group_fields">
        <%= f.simple_fields_for :strategy_groups do |strategy_group| %>
            <%= render '/settings/strategy_groups/nested_fields', :f => strategy_group %>
        <% end %>
    </tbody>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#strategy_group_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>