<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th nowrap><%= FacultyUser.human_attribute_name :user %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;">
                    <%= link_to_add_association f, :faculty_users, partial: "/settings/faculty_users/nested_fields", class: "btn btn-sm btn-success",
                    "data-association-insertion-node" => "#faculty_user_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus'></i>
                    <% end %>
                </th>
            <% end %>
        </tr>
    </thead>
    <tbody id="faculty_user_fields">
        <%= f.simple_fields_for :faculty_users do |faculty_user| %>
            <%= render '/settings/faculty_users/nested_fields', :f => faculty_user %>
        <% end %>
    </tbody>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#faculty_user_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>