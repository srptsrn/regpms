<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th nowrap><%= Committee.human_attribute_name :user %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;">
                    <%= link_to_add_association f, :committees, partial: "/settings/committees/nested_fields", class: "btn btn-sm btn-success",
                    "data-association-insertion-node" => "#committee_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus'></i>
                    <% end %>
                </th>
            <% end %>
        </tr>
    </thead>
    <tbody id="committee_fields">
        <%= f.simple_fields_for :committees do |committee| %>
            <%= render '/settings/committees/nested_fields', :f => committee %>
        <% end %>
    </tbody>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#committee_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>