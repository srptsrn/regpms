<!-- replace 'parent_object' with your parent object name -->
<% 
	f_index = "#{f.index}".to_s
	object_name = "parent_object_positions_attributes_#{f_index}".to_sym
	position_type_select_id = "parent_object_positions_attributes_#{f_index}_position_type_id".to_sym
%> 
<tr class="nested-fields">
    <td class="text-top">
        <%= f.input :name, wrapper: :nested_form %>
    </td>
    <td class="text-top">
        <%= f.association :position_type, wrapper: :nested_form, collection: (PositionType.all + (f.object.position_type.nil? ? [] : [f.object.position_type])).uniq.sort_by {|asso| asso.to_s}, value_method: :id, label_method: :to_s, input_html: {data: {placeholder: t(:choose)}} %>
        <%= render partial: "/position_types/chosen_select", locals: {object_name: :position, no_create: true, select_id: position_type_select_id} %>
    </td>
    <% unless action_name == "show" %>
        <td class="text-top">
            <%= link_to_remove_association f, class: "btn btn-sm btn-danger" do %>
               <i class='fa fa-trash-o'></i>
            <% end %>
			<script type="text/javascript">$(document).ready( function() { jQuery(function($){ $("#parent_object_positions_attributes_<%= f.index %>_position_type").chosen({width: "100%"}); }); });</script>
        </td>
    <% end %>
</tr>