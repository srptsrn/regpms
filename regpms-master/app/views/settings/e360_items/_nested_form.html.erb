<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th nowrap style="width:90px;"><%= E360Item.human_attribute_name :sorting %></th>
            <th nowrap><%= E360Item.human_attribute_name :name %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;">
                    <%= link_to_add_association f, :e360_items, partial: "/settings/e360_items/nested_fields", class: "btn btn-sm btn-success",
                    "data-association-insertion-node" => "#e360_item_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus'></i>
                    <% end %>
                </th>
            <% end %>
        </tr>
    </thead>
    <tbody id="e360_item_fields">
        <%= f.simple_fields_for :e360_items do |e360_item| %>
            <%= render '/settings/e360_items/nested_fields', :f => e360_item %>
        <% end %>
    </tbody>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#e360_item_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>