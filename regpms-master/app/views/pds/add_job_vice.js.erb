<% if @error_message.blank? %>
	$('#job-vice-list').append("<%=j render(partial: "row_job_vice", locals: {job_vice: @job_vice}) %>");
	$('#new_job_vice_job_template_id').val('');
	$('#new_job_vice_job_template_id').trigger('chosen:updated');
	$('#new_job_vice_expect_qty').val('');
	$('#new_job_vice_name').val('');
	$('#new_job_vice_weight').val('');
	$('#new_job_vice_expect').val('');
	$('#job-vice-row-<%= @job_vice.id %>').effect("highlight", 1000);
	
	$('#xnew_job_vice_expect_1').prop('checked', false);
	$('#xnew_job_vice_expect_2').prop('checked', false);
	$('#xnew_job_vice_expect_3').prop('checked', false);
	$('#xnew_job_vice_expect_4').prop('checked', false);
	$('#xnew_job_vice_expect_5').prop('checked', false);
	
	$('#new_job_vice_name').parent().removeClass('has-error');
	$('#new_job_vice_expect').parent().removeClass('has-error');
	$('#new_job_vice_weight').parent().removeClass('has-error');
<% else %>
	
	if($('#new_job_vice_name').val() == ''){
		$('#new_job_vice_name').parent().addClass('has-error');
	}else{
		$('#new_job_vice_name').parent().removeClass('has-error');
	}
	
	if($('#new_job_vice_expect').val() == ''){
		$('#new_job_vice_expect').parent().addClass('has-error');
	}else{
		$('#new_job_vice_expect').parent().removeClass('has-error');
	}
	
	if($('#new_job_vice_weight').val() == ''){
		$('#new_job_vice_weight').parent().addClass('has-error');
	}else{
		$('#new_job_vice_weight').parent().removeClass('has-error');
	}
	
	alert('<%=h @error_message %>\r\n<%= @job_vice.errors.full_messages.join("\\r\\n") %>');
	
<% end %>


init_input_chosen();