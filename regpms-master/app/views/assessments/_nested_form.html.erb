<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th nowrap><%= Assessment.human_attribute_name :user %></th>
            <th nowrap><%= Assessment.human_attribute_name :evaluation %></th>
            <th nowrap><%= Assessment.human_attribute_name :committee %></th>
            <th nowrap><%= Assessment.human_attribute_name :role %></th>
            <th nowrap><%= Assessment.human_attribute_name :score111 %></th>
            <th nowrap><%= Assessment.human_attribute_name :score112 %></th>
            <th nowrap><%= Assessment.human_attribute_name :score113 %></th>
            <th nowrap><%= Assessment.human_attribute_name :score114 %></th>
            <th nowrap><%= Assessment.human_attribute_name :score211 %></th>
            <th nowrap><%= Assessment.human_attribute_name :score212 %></th>
            <th nowrap><%= Assessment.human_attribute_name :score213 %></th>
            <th nowrap><%= Assessment.human_attribute_name :score214 %></th>
            <th nowrap><%= Assessment.human_attribute_name :score215 %></th>
            <th nowrap><%= Assessment.human_attribute_name :score221 %></th>
            <th nowrap><%= Assessment.human_attribute_name :score222 %></th>
            <th nowrap><%= Assessment.human_attribute_name :score223 %></th>
            <th nowrap><%= Assessment.human_attribute_name :score224 %></th>
            <th nowrap><%= Assessment.human_attribute_name :score225 %></th>
            <th nowrap><%= Assessment.human_attribute_name :score226 %></th>
            <th nowrap><%= Assessment.human_attribute_name :comment1 %></th>
            <th nowrap><%= Assessment.human_attribute_name :comment2 %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;">
                    <%= link_to_add_association f, :assessments, partial: "/assessments/nested_fields", class: "btn btn-sm btn-success",
                    "data-association-insertion-node" => "#assessment_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus'></i>
                    <% end %>
                </th>
            <% end %>
        </tr>
    </thead>
    <tbody id="assessment_fields">
        <%= f.simple_fields_for :assessments do |assessment| %>
            <%= render '/assessments/nested_fields', :f => assessment %>
        <% end %>
    </tbody>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#assessment_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>