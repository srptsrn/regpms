<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th nowrap><%= E360User.human_attribute_name :evaluation %></th>
            <th nowrap><%= E360User.human_attribute_name :user %></th>
            <th nowrap><%= E360User.human_attribute_name :committee %></th>
            <th nowrap><%= E360User.human_attribute_name :role %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;">
                    <%= link_to_add_association f, :e360_users, partial: "/e360_users/nested_fields", class: "btn btn-sm btn-success",
                    "data-association-insertion-node" => "#e360_user_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus'></i>
                    <% end %>
                </th>
            <% end %>
        </tr>
    </thead>
    <tbody id="e360_user_fields">
        <%= f.simple_fields_for :e360_users do |e360_user| %>
            <%= render '/e360_users/nested_fields', :f => e360_user %>
        <% end %>
    </tbody>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#e360_user_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>