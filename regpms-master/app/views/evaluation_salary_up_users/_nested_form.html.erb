<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th nowrap><%= EvaluationSalaryUpUser.human_attribute_name :evaluation %></th>
            <th nowrap><%= EvaluationSalaryUpUser.human_attribute_name :evaluation_salary_up %></th>
            <th nowrap><%= EvaluationSalaryUpUser.human_attribute_name :user %></th>
            <th nowrap><%= EvaluationSalaryUpUser.human_attribute_name :position_level %></th>
            <th nowrap><%= EvaluationSalaryUpUser.human_attribute_name :salary %></th>
            <th nowrap><%= EvaluationSalaryUpUser.human_attribute_name :base_salary %></th>
            <th nowrap><%= EvaluationSalaryUpUser.human_attribute_name :base_salary_min %></th>
            <th nowrap><%= EvaluationSalaryUpUser.human_attribute_name :base_salary_max %></th>
            <th nowrap><%= EvaluationSalaryUpUser.human_attribute_name :is_eligible %></th>
            <th nowrap><%= EvaluationSalaryUpUser.human_attribute_name :is_work_hour_passed %></th>
            <th nowrap><%= EvaluationSalaryUpUser.human_attribute_name :lost_count %></th>
            <th nowrap><%= EvaluationSalaryUpUser.human_attribute_name :late_count %></th>
            <th nowrap><%= EvaluationSalaryUpUser.human_attribute_name :leave_count %></th>
            <th nowrap><%= EvaluationSalaryUpUser.human_attribute_name :point %></th>
            <th nowrap><%= EvaluationSalaryUpUser.human_attribute_name :percent_of_min_up %></th>
            <th nowrap><%= EvaluationSalaryUpUser.human_attribute_name :salary_min_up %></th>
            <th nowrap><%= EvaluationSalaryUpUser.human_attribute_name :percent_of_up %></th>
            <th nowrap><%= EvaluationSalaryUpUser.human_attribute_name :salary_up %></th>
            <% unless action_name == "show" %>
                <th style="width:30px;">
                    <%= link_to_add_association f, :evaluation_salary_up_users, partial: "/evaluation_salary_up_users/nested_fields", class: "btn btn-sm btn-success",
                    "data-association-insertion-node" => "#evaluation_salary_up_user_fields",
                    "data-association-insertion-method" => :append do %>
                    <i class='fa fa-plus'></i>
                    <% end %>
                </th>
            <% end %>
        </tr>
    </thead>
    <tbody id="evaluation_salary_up_user_fields">
        <%= f.simple_fields_for :evaluation_salary_up_users do |evaluation_salary_up_user| %>
            <%= render '/evaluation_salary_up_users/nested_fields', :f => evaluation_salary_up_user %>
        <% end %>
    </tbody>
</table>
<script type="text/javascript">
    jQuery(function($) {
        $('#evaluation_salary_up_user_fields').on('cocoon:after-insert', function(e, insertedItem) {
            init_input_date_picker();
            init_input_time_picker();
            init_input_datetime_picker();
        });
    });
</script>