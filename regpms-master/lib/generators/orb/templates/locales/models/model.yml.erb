<% [:en, :th].each do |locale| -%>
<%= locale -%>:
  activerecord:
    models:
      <%= singular_table_name %>: <%= class_name %>
    attributes:
      <%= singular_table_name %>:
<% if attributes.select{|a| a.name.to_s == 'workflow_state'}.size > 0 -%>
<% if locale == :en -%>
        workflow_state: Status
        workflow_state_updater: Status updater
<% elsif locale == :th -%>
        workflow_state: สถานะ
        workflow_state_updater: เปลี่ยนสถานะโดย
<% end -%>
<% end -%>
<% attributes.select{|a| a.name.to_s != 'workflow_state' && a.name.to_s != "workflow_state_updater"}.each do |attribute| -%>
        <%= attribute.name %>: <%= attribute.name.humanize %>
<% end -%>
<% if locale == :en -%>
        created_by: Created by
        updated_by: Updated by 
        created_at: Created at
        updated_at: Updated at
<% elsif locale == :th -%>
        created_by: สร้างโดย
        updated_by: แก้ไขโดย
        created_at: สร้างเมื่อ
        updated_at: แก้ไขเมื่อ
<% end -%>
<% end -%>